
<h2>Product List</h2>
<a href="/admin/products/add" class="btn btn-success mb-2">Add New Product</a>
<table class="table">
  <thead>
    <tr><th>Name</th><th>Price</th><th>Size</th><th>Department</th><th>Image</th><th>Actions</th></tr>
  </thead>
  <tbody>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.name %></td>
        <td>Rs <%= p.price %></td>
        <td><%= p.size %></td>
        <td><%= p.department %></td>
        <td><img src="<%= p.image %>" width="80"></td>
        <td>
          <a href="/admin/products/edit/<%= p._id %>" class="btn btn-warning btn-sm">Edit</a>
          <a href="/admin/products/delete/<%= p._id %>" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>